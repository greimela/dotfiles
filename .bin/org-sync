#!/usr/bin/env bash

set -o errexit
set -o pipefail
set -u

_sync_external_services() {
  pushd "$HOME/.bin"

  ./org-sync-calendar
  pipenv run python org-sync-todoist
  ./org-pushbullet "$HOME/.org/reading/"

  popd
}

_sync_repository() {
  pushd "$HOME/.org"

  git status \
    || sleep 1

  git add '.'

  git commit -m "Sync $(gdate --iso-8601=minutes)" \
    || true

  git pull
  git push

  popd
}

_main() {
  _sync_external_services
  _sync_repository
}

_main
